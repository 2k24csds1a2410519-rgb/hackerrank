#include <bits/stdc++.h>
using namespace std;
int main(){
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int n;
    if(!(cin>>n)) return 0;
    vector<pair<long long,int>> a(n);
    for(int i=0;i<n;++i){
        long long x; cin>>x;
        a[i]={x,i};
    }
    sort(a.begin(), a.end());
    long long ans = LLONG_MAX;
    for(int i=1;i<n;++i){
        if(a[i].second < a[i-1].second){
            long long diff = a[i].first - a[i-1].first;
            if(diff>0 && diff<ans) ans = diff;
        }
    }
    cout<<ans<<"\n";
    return 0;
}
